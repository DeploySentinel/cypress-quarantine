{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["dom", "es5", "es2021"],
    "moduleResolution": "node",
    "noImplicitThis": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "types": ["cypress", "node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "rollup.config.js"]
}
